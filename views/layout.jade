doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    h1= title
  nav
    span
      a(title='主页', href='/') 主页

    if user
      span
        a(title='发表' href='/post') 发表
      span
        a(title='登出', href='/logout') 登出
    else
      span
        a(title='登录' href='/login') 登录
      span
        a(title='注册', href='/reg') 注册
  article
    if success
      div= success
    if error
      div= error
  
  body
    block content